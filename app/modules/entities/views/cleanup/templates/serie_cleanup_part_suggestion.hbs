<div>
  {{#if image.url}}<img src="{{imgSrc image.url 100}}" alt="{{label}}" loading="lazy">{{/if}}
</div>
<a class="showEntity link" href="{{pathname}}">{{label}}</a>
<p class="uri">{{uri}}</p>
<p class="claims">
  {{entityClaim claims 'wdt:P50' true}}
  {{entityClaim claims 'wdt:P179' true}}
</p>

<div>
  {{#if serieNeedsToBeMovedToWikidata}}
    <span class="add disabled" title="{{i18n "move the series to Wikidata to be able to add this work"}}">{{icon 'plus'}} {{I18n 'add to the series'}}</a>
  {{else}}
    <a class="add">{{icon 'plus'}} {{I18n 'add to the series'}}</a>
  {{/if}}
</div>

{{#unless workPickerDisabled}}
  {{> 'entities:cleanup:work_picker' this}}
{{/unless}}

<div id="language-picker" class="dropdown-wrapper">
  <button aria-controls="languages-options" aria-haspopup="menu">
    <span class="current-lang">{{currentLanguage}}</span>
    <span class="current-lang-short">{{currentLanguageShortName}}</span>
    {{icon 'caret-down'}}
  </button>
  <div id="languages-options" class="dropdown-align-end" role="menu">
    <ul class="options">
      {{#each languages}}
        <li class="option" role="menuitem">
          <button data-lang="{{lang}}" title="{{i18n 'switch_to_lang' language=native}} ({{i18n 'translation_completion' completion=completion}})">
            <span class="completion" style="width:{{completion}}%"></span>
            <span class="lang" lang="{{lang}}">{{native}}</span>
            <span class="completion-text">({{completion}}%)</span>
          </button>
        </li>
      {{/each}}
    </ul>
    <div role="menuitem">
      {{iconLinkText name='pencil' url=translate I18n='help translate Inventaire' linkClasses='help-translate'}}
    </div>
  </div>
</div>
